<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Mekanik İş Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mekanik İş Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="mechanicalWorkForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="p" name="P" placeholder="Basınç (P)">
                                    <label for="p">Basınç (P)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="a" name="A" placeholder="Alan (A)">
                                    <label for="a">Alan (A)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="vFirst" name="VFirst" placeholder="İlk Hacim (V1)">
                                    <label for="vFirst">İlk Hacim (V1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="vSecond" name="VSecond" placeholder="İkinci Hacim (V2)">
                                    <label for="vSecond">İkinci Hacim (V2)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="mechanicalWorkResultF" class="form-label">Kuvvet (F)</label>
                            <input type="text" class="form-control" id="mechanicalWorkResultF" readonly>
                        </div>
                        <div class="mt-3">
                            <label for="mechanicalWorkResultW" class="form-label">İş (W)</label>
                            <input type="text" class="form-control" id="mechanicalWorkResultW" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            P: parseFloat(document.getElementById("p").value) || 0,
            A: parseFloat(document.getElementById("a").value) || 0,
            VFirst: parseFloat(document.getElementById("vFirst").value) || 0,
            VSecond: parseFloat(document.getElementById("vSecond").value) || 0
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/MechanicalWork', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("mechanicalWorkResultF").value = result.data.f.toFixed(2);
                document.getElementById("mechanicalWorkResultW").value = result.data.w.toFixed(2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
            alert('An error occurred: ' + error.message);
        }
    });
</script>
