<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Mükemmel Gazlar için Entropi Değişimi Hesaplama - Yaklaşık Çözüm</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mükemmel Gazlar için Entropi Değişimi Hesaplama - Yaklaşık Çözüm</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="entropyChangeForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tFirst" name="TFirst" placeholder="İlk Sıcaklık (T1)">
                                    <label for="tFirst">İlk Sıcaklık (T1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tSecond" name="TSecond" placeholder="İkinci Sıcaklık (T2)">
                                    <label for="tSecond">İkinci Sıcaklık (T2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="cpAverage" name="CpAverage" placeholder="Ortalama Cp">
                                    <label for="cpAverage">Ortalama Cp</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="cpAverageOver" name="CpAverageOver" placeholder="Cp/R">
                                    <label for="cpAverageOver">Cp/R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="cvAverage" name="CvAverage" placeholder="Ortalama Cv">
                                    <label for="cvAverage">Ortalama Cv</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="cvAverageOver" name="CvAverageOver" placeholder="Cv/R">
                                    <label for="cvAverageOver">Cv/R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificFirst" name="VSpecificFirst" placeholder="İlk Özgül Hacim">
                                    <label for="vSpecificFirst">İlk Özgül Hacim</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificSecond" name="VSpecificSecond" placeholder="İkinci Özgül Hacim">
                                    <label for="vSpecificSecond">İkinci Özgül Hacim</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="r" name="R" placeholder="R">
                                    <label for="r">R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="ruOver" name="RuOver" placeholder="Ru/R">
                                    <label for="ruOver">Ru/R</label>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="entropyResult" class="form-label">Entropi Değişimi (S)</label>
                            <input type="text" class="form-control" id="entropyResult" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            TFirst: parseFloat(document.getElementById("tFirst").value),
            TSecond: parseFloat(document.getElementById("tSecond").value),
            CpAverage: parseFloat(document.getElementById("cpAverage").value),
            CpAverageOver: parseFloat(document.getElementById("cpAverageOver").value),
            CvAverage: parseFloat(document.getElementById("cvAverage").value),
            CvAverageOver: parseFloat(document.getElementById("cvAverageOver").value),
            VSpecificFirst: parseFloat(document.getElementById("vSpecificFirst").value),
            VSpecificSecond: parseFloat(document.getElementById("vSpecificSecond").value),
            R: parseFloat(document.getElementById("r").value),
            RuOver: parseFloat(document.getElementById("ruOver").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/EntropyChangeOfPerfectGasesApproximate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.s !== undefined) {
                document.getElementById("entropyResult").value = result.data.s;
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
