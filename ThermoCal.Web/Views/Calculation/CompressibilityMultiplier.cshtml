<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Sıkıştırılabilme Çarpanı Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sıkıştırılabilme Çarpanı Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="z" placeholder="Sıkıştırılabilme Çarpanı">
                                    <label for="z">Sıkıştırılabilme Çarpanı (Z)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="pressure" placeholder="Basınç">
                                    <label for="pressure">Basınç (P)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="V" placeholder="Hacim">
                                    <label for="V">Hacim (V)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="T" placeholder="Sıcaklık">
                                    <label for="T">Sıcaklık (T)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="R" placeholder="Gaz Sabiti">
                                    <label for="R">Gaz Sabiti (R)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="v" placeholder="Özgül Hacim (v)">
                                    <label for="v">Özgül Hacim (v)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vA" placeholder="Özgül Hacim (v,gerçek)">
                                    <label for="vA">Özgül Hacim (v,gerçek)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vI" placeholder="Özgül Hacim (v,mükemmel)">
                                    <label for="vI">Özgül Hacim (v,mükemmel)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="compressibilityMultiplier" class="form-label">Sıkıştırılabilme Çarpanı (Z)</label>
                            <input type="text" class="form-control" id="compressibilityMultiplier" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            Z: parseFloat(document.getElementById("z").value),
            P: parseFloat(document.getElementById("pressure").value),
            T: parseFloat(document.getElementById("T").value),
            R: parseFloat(document.getElementById("R").value),
            V: parseFloat(document.getElementById("V").value),
            VSpecific: parseFloat(document.getElementById("v").value),
            VSpecificActual: parseFloat(document.getElementById("vA").value),
            VSpecificIdeal: parseFloat(document.getElementById("vI").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/CompressibilityMultiplier', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.z !== undefined) {
                document.getElementById("compressibilityMultiplier").value = result.data.z;
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
