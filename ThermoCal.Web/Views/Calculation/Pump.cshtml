<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Pompa Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Pompa Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="pumpCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="mDot" name="MDot" placeholder="Kütlesel Akış Oranı (ṁ)">
                                    <label for="mDot">Kütlesel Akış Oranı (ṁ)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="g" name="G" placeholder="Yerçekimi İvmesi (G)">
                                    <label for="g">Yerçekimi İvmesi (G)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="zSecond" name="ZSecond" placeholder="İkinci Yükseklik (Z2)">
                                    <label for="zSecond">İkinci Yükseklik (Z2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="zFirst" name="ZFirst" placeholder="İlk Yükseklik (Z1)">
                                    <label for="zFirst">İlk Yükseklik (Z1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pSecond" name="PSecond" placeholder="İkinci Basınç (P2)">
                                    <label for="pSecond">İkinci Basınç (P2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pFirst" name="PFirst" placeholder="İlk Basınç (P1)">
                                    <label for="pFirst">İlk Basınç (P1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="density" name="Density" placeholder="Yoğunluk (Density)">
                                    <label for="density">Yoğunluk (Density)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="c" name="C" placeholder="Isı Kapasitesi (C)">
                                    <label for="c">Isı Kapasitesi (C)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="hSecond" name="HSecond" placeholder="İkinci Entalpi (H2)">
                                    <label for="hSecond">İkinci Entalpi (H2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="hFirst" name="HFirst" placeholder="İlk Entalpi (H1)">
                                    <label for="hFirst">İlk Entalpi (H1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="vSpecific" name="VSpecific" placeholder="Özgül Hacim (v)">
                                    <label for="vSpecific">Özgül Hacim (v)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="pumpCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <input type="text" class="form-control" id="pumpCalculationResult" readonly>
                        </div>

                        <div class="alert alert-danger mt-3 d-none" id="errorAlert" role="alert"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            MDot: parseFloat(document.getElementById("mDot").value),
            G: parseFloat(document.getElementById("g").value),
            ZSecond: parseFloat(document.getElementById("zSecond").value),
            ZFirst: parseFloat(document.getElementById("zFirst").value),
            PSecond: parseFloat(document.getElementById("pSecond").value) || 0,
            PFirst: parseFloat(document.getElementById("pFirst").value) || 0,
            Density: parseFloat(document.getElementById("density").value),
            C: parseFloat(document.getElementById("c").value) || 0,
            HSecond: parseFloat(document.getElementById("hSecond").value),
            HFirst: parseFloat(document.getElementById("hFirst").value),
            VSpecific: parseFloat(document.getElementById("vSpecific").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/Pump', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.wmDot !== undefined) {
                document.getElementById("pumpCalculationResult").value = result.data.wmDot.toFixed(2);
                document.getElementById("errorAlert").classList.add('d-none');
            } else {
                console.error('API returned unexpected response:', result);
                document.getElementById("errorAlert").classList.remove('d-none');
                document.getElementById("errorAlert").textContent = 'Error: API returned unexpected response';
            }
        } catch (error) {
            console.error('An error occurred:', error);
            document.getElementById("errorAlert").classList.remove('d-none');
            document.getElementById("errorAlert").textContent = `Error: ${error.message}`;
        }
    });
</script>
