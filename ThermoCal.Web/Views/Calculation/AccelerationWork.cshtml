<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">İvme İşi</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">İvme İşi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="work" placeholder="İş">
                                    <label for="work">W(İş)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="force" placeholder="Kuvvet">
                                    <label for="force">Kuvvet(F)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mass" placeholder="Kütle">
                                    <label for="mass">Kütle(m)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="acceleration" placeholder="İvme">
                                    <label for="acceleration">İvme(a)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="velocityFirst" placeholder="İlk Hız">
                                    <label for="velocityFirst">İlk Hız(v1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="velocitySecond" placeholder="Son Hız">
                                    <label for="velocitySecond">Son Hız(v2)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script>
    document.getElementById("calculate").addEventListener("click", function () {
        var formData = {
            M: document.getElementById("mass").value,
            A: document.getElementById("acceleration").value,
            F: document.getElementById("force").value,
            VFirst: document.getElementById("velocityFirst").value,
            VSecond: document.getElementById("velocitySecond").value
        };

        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/Calculation/AccelerationWork", true);
        xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");

        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4) {
                try {
                    var result = JSON.parse(xhr.responseText);
                    if (xhr.status === 200) {
                        document.getElementById("work").value = result.data.w;
                    } else {
                        alert("Error: " + result.errors.join(", "));
                    }
                } catch (e) {
                    alert("An unexpected error occurred. Please try again later.");
                }
            }
        };

        xhr.send(JSON.stringify(formData));
    });
</script>