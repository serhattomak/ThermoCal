<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Sıvı Yüzeyi Gerilme Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sıvı Yüzeyi Gerilme Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="stressCalculationOfLiquidSurfaceForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sigmaY" name="SigmaY" placeholder="Yüzey Gerilimi (σY)">
                                    <label for="sigmaY">Yüzey Gerilimi (σY)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="aFirst" name="AFirst" placeholder="İlk Alan (A1)">
                                    <label for="aFirst">İlk Alan (A1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="aSecond" name="ASecond" placeholder="İkinci Alan (A2)">
                                    <label for="aSecond">İkinci Alan (A2)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="stressCalculationOfLiquidSurfaceResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="stressCalculationOfLiquidSurfaceResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            SigmaY: parseFloat(document.getElementById("sigmaY").value),
            AFirst: parseFloat(document.getElementById("aFirst").value),
            ASecond: parseFloat(document.getElementById("aSecond").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/StressOfLiquidSurface', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();
            console.log("API Response:", result);

            if (result && result.data) {
                document.getElementById("stressCalculationOfLiquidSurfaceResult").value = JSON.stringify(result.data, null, 2);
            } else {
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
