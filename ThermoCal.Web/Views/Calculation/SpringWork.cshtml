<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Yay İşi Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yay İşi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="springWorkForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="x" name="X" placeholder="Yer Değiştirme (X)">
                                    <label for="x">Yer Değiştirme (X)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="k" name="K" placeholder="Yay Sabiti (K)">
                                    <label for="k">Yay Sabiti (K)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="springWorkCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="springWorkCalculationResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            X: parseFloat(document.getElementById("x").value),
            K: parseFloat(document.getElementById("k").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/SpringWork', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();
            console.log("API Response:", result);

            if (result && result.data) {
                document.getElementById("springWorkCalculationResult").value = JSON.stringify(result.data, null, 2);
            } else {
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
