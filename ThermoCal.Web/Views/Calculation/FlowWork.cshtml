<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Akış İşi Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Akış İşi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="flowWorkForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="qDot" name="QDot" placeholder="Isı Transfer Oranı (Q̇)">
                                    <label for="qDot">Isı Transfer Oranı (Q̇)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="wDot" name="WDot" placeholder="İş Transfer Oranı (Ẇ)">
                                    <label for="wDot">İş Transfer Oranı (Ẇ)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotIn" name="MDotIn" placeholder="Giriş Kütlesel Debi (ṁin)">
                                    <label for="mDotIn">Giriş Kütlesel Debi (ṁin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotOut" name="MDotOut" placeholder="Çıkış Kütlesel Debi (ṁout)">
                                    <label for="mDotOut">Çıkış Kütlesel Debi (ṁout)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="velocityIn" name="VelocityIn" placeholder="Giriş Hızı (Vin)">
                                    <label for="velocityIn">Giriş Hızı (Vin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="velocityOut" name="VelocityOut" placeholder="Çıkış Hızı (Vout)">
                                    <label for="velocityOut">Çıkış Hızı (Vout)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hIn" name="HIn" placeholder="Giriş Enthalpi (Hin)">
                                    <label for="hIn">Giriş Enthalpi (Hin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hOut" name="HOut" placeholder="Çıkış Enthalpi (Hout)">
                                    <label for="hOut">Çıkış Enthalpi (Hout)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="zIn" name="ZIn" placeholder="Giriş Yüksekliği (Zin)">
                                    <label for="zIn">Giriş Yüksekliği (Zin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="zOut" name="ZOut" placeholder="Çıkış Yüksekliği (Zout)">
                                    <label for="zOut">Çıkış Yüksekliği (Zout)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="g" name="G" placeholder="Yerçekimi ivmesi (g)">
                                    <label for="g">Yerçekimi ivmesi (g)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="flowWorkResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="flowWorkResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            QDot: parseFloat(document.getElementById("qDot").value),
            WDot: parseFloat(document.getElementById("wDot").value),
            MDotIn: parseFloat(document.getElementById("mDotIn").value),
            MDotOut: parseFloat(document.getElementById("mDotOut").value),
            VelocityIn: parseFloat(document.getElementById("velocityIn").value),
            VelocityOut: parseFloat(document.getElementById("velocityOut").value),
            HIn: parseFloat(document.getElementById("hIn").value),
            HOut: parseFloat(document.getElementById("hOut").value),
            ZIn: parseFloat(document.getElementById("zIn").value),
            ZOut: parseFloat(document.getElementById("zOut").value),
            G: parseFloat(document.getElementById("g").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/FlowWork', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("flowWorkResult").value = JSON.stringify(result.data, null, 2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
