<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Hacimsel Akış Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Hacimsel Akış Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="volumetricFlowForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="volumetricFlow" name="VolumetricFlow" placeholder="Hacimsel Akış (VolumetricFlow)">
                                    <label for="volumetricFlow">Hacimsel Akış (VolumetricFlow)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vAverage" name="VAverage" placeholder="Ortalama Hız (VAverage)">
                                    <label for="vAverage">Ortalama Hız (VAverage)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="a" name="A" placeholder="Alan (A)">
                                    <label for="a">Alan (A)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="density" name="Density" placeholder="Yoğunluk (Density)">
                                    <label for="density">Yoğunluk (Density)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="volumetricFlowCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="volumetricFlowCalculationResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            VolumetricFlow: parseFloat(document.getElementById("volumetricFlow").value),
            VAverage: parseFloat(document.getElementById("vAverage").value),
            A: parseFloat(document.getElementById("a").value),
            Density: parseFloat(document.getElementById("density").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/VolumetricFlow', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();
            console.log("API Response:", result);

            if (result && result.data) {
                document.getElementById("volumetricFlowCalculationResult").value = JSON.stringify(result.data, null, 2);
            } else {
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
