<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Sabit Akış Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sabit Akış Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="steadyFlowCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="eFirst" name="EFirst" placeholder="İlk Enerji (E1)">
                                    <label for="eFirst">İlk Enerji (E1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="eSecond" name="ESecond" placeholder="İkinci Enerji (E2)">
                                    <label for="eSecond">İkinci Enerji (E2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mFirst" name="MFirst" placeholder="İlk Kütle (M1)">
                                    <label for="mFirst">İlk Kütle (M1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mSecond" name="MSecond" placeholder="İkinci Kütle (M2)">
                                    <label for="mSecond">İkinci Kütle (M2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hIn" name="HIn" placeholder="Giriş Entalpisi (Hin)">
                                    <label for="hIn">Giriş Entalpisi (Hin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hOut" name="HOut" placeholder="Çıkış Entalpisi (Hout)">
                                    <label for="hOut">Çıkış Entalpisi (Hout)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mIn" name="MIn" placeholder="Giriş Kütlesi (Min)">
                                    <label for="mIn">Giriş Kütlesi (Min)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mOut" name="MOut" placeholder="Çıkış Kütlesi (Mout)">
                                    <label for="mOut">Çıkış Kütlesi (Mout)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="steadyFlowCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="steadyFlowCalculationResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            EFirst: parseFloat(document.getElementById("eFirst").value),
            ESecond: parseFloat(document.getElementById("eSecond").value),
            MFirst: parseFloat(document.getElementById("mFirst").value),
            MSecond: parseFloat(document.getElementById("mSecond").value),
            HIn: parseFloat(document.getElementById("hIn").value),
            HOut: parseFloat(document.getElementById("hOut").value),
            MIn: parseFloat(document.getElementById("mIn").value),
            MOut: parseFloat(document.getElementById("mOut").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/SteadyFlow', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();
            console.log("API Response:", result);

            if (result && result.data) {
                document.getElementById("steadyFlowCalculationResult").value = JSON.stringify(result.data, null, 2);
            } else {
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
