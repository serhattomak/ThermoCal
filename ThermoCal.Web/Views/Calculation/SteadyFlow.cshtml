<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Sabit Akış Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sabit Akış Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="steadyFlowCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="mIn" name="MIn" placeholder="Giriş Kütlesi (Min)">
                                    <label for="mIn">Giriş Kütlesi (Min)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="mSecond" name="MSecond" placeholder="İkinci Kütle (M2)">
                                    <label for="mSecond">İkinci Kütle (M2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="eSecond" name="ESecond" placeholder="İkinci Enerji (E2)">
                                    <label for="eSecond">İkinci Enerji (E2)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="steadyFlowCalculationResult" class="form-label">Giriş Entalpisi (Hin)</label>
                            <input type="text" class="form-control" id="steadyFlowCalculationResult" readonly>
                        </div>

                        <div class="alert alert-danger mt-3 d-none" id="errorAlert" role="alert"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            MIn: parseFloat(document.getElementById("mIn").value),
            MSecond: parseFloat(document.getElementById("mSecond").value),
            ESecond: parseFloat(document.getElementById("eSecond").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/SteadyFlow', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error('API returned error: ' + errorText);
            }

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.hIn !== undefined) {
                document.getElementById("steadyFlowCalculationResult").value = result.data.hIn.toFixed(2);
                document.getElementById("errorAlert").classList.add('d-none');
            } else {
                console.error('API returned unexpected response:', result);
                document.getElementById("errorAlert").classList.remove('d-none');
                document.getElementById("errorAlert").textContent = 'Error: API returned unexpected response';
            }
        } catch (error) {
            console.error('An error occurred:', error);
            document.getElementById("errorAlert").classList.remove('d-none');
            document.getElementById("errorAlert").textContent = `Error: ${error.message}`;
        }
    });
</script>
