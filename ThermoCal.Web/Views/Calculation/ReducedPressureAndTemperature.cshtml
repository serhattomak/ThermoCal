<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">İndirgenmiş Basınç ve Sıcaklık Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">İndirgenmiş Basınç ve Sıcaklık Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="reducedPressureAndTemperatureForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="p" name="P" placeholder="Basınç (P)">
                                    <label for="p">Basınç (P)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pCr" name="PCr" placeholder="Kritik Basınç (PCr)">
                                    <label for="pCr">Kritik Basınç (PCr)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="t" name="T" placeholder="Sıcaklık (T)">
                                    <label for="t">Sıcaklık (T)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="tCr" name="TCr" placeholder="Kritik Sıcaklık (TCr)">
                                    <label for="tCr">Kritik Sıcaklık (TCr)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="pr" class="form-label">İndirgenmiş Basınç (Pr)</label>
                            <input type="text" class="form-control" id="pr" readonly>
                        </div>
                        <div class="mt-3">
                            <label for="tr" class="form-label">İndirgenmiş Sıcaklık (Tr)</label>
                            <input type="text" class="form-control" id="tr" readonly>
                        </div>

                        <div class="alert alert-danger mt-3 d-none" id="errorAlert" role="alert"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            P: parseFloat(document.getElementById("p").value),
            PCr: parseFloat(document.getElementById("pCr").value),
            T: parseFloat(document.getElementById("t").value),
            TCr: parseFloat(document.getElementById("tCr").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/ReducedPressureAndTemperature', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error('API returned error: ' + errorText);
            }

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("pr").value = result.data.pr.toFixed(2);
                document.getElementById("tr").value = result.data.tr.toFixed(2);
                document.getElementById("errorAlert").classList.add('d-none');
            } else {
                console.error('API returned unexpected response:', result);
                document.getElementById("errorAlert").classList.remove('d-none');
                document.getElementById("errorAlert").textContent = 'Error: API returned unexpected response';
            }
        } catch (error) {
            console.error('An error occurred:', error);
            document.getElementById("errorAlert").classList.remove('d-none');
            document.getElementById("errorAlert").textContent = `Error: ${error.message}`;
        }
    });
</script>
