<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Soğutma Makinesi Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Soğutma Makinesi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="refrigeratorCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="ql" name="Ql" placeholder="Düşük Sıcaklıktaki Isı (Ql)">
                                    <label for="ql">Düşük Sıcaklıktaki Isı (Ql)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="qh" name="Qh" placeholder="Yüksek Sıcaklıktaki Isı (Qh)">
                                    <label for="qh">Yüksek Sıcaklıktaki Isı (Qh)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="wNet" class="form-label">Net İş (WNet)</label>
                            <input type="text" class="form-control" id="wNet" readonly>
                        </div>
                        <div class="mt-3">
                            <label for="copRef" class="form-label">Soğutma COP (COPRef)</label>
                            <input type="text" class="form-control" id="copRef" readonly>
                        </div>

                        <div class="alert alert-danger mt-3 d-none" id="errorAlert" role="alert"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            Ql: parseFloat(document.getElementById("ql").value),
            Qh: parseFloat(document.getElementById("qh").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/Refrigerator', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error('API returned error: ' + errorText);
            }

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("wNet").value = result.data.wNet.toFixed(2);
                document.getElementById("copRef").value = result.data.copRef.toFixed(2);
                document.getElementById("errorAlert").classList.add('d-none');
            } else {
                console.error('API returned unexpected response:', result);
                document.getElementById("errorAlert").classList.remove('d-none');
                document.getElementById("errorAlert").textContent = 'Error: API returned unexpected response';
            }
        } catch (error) {
            console.error('An error occurred:', error);
            document.getElementById("errorAlert").classList.remove('d-none');
            document.getElementById("errorAlert").textContent = `Error: ${error.message}`;
        }
    });
</script>
