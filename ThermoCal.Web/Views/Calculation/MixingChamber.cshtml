<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Karıştırma Odası Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Karıştırma Odası Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="mixingChamberCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotFirst" name="MDotFirst" placeholder="İlk Kütlesel Debi (ṁ1)">
                                    <label for="mDotFirst">İlk Kütlesel Debi (ṁ1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotSecond" name="MDotSecond" placeholder="İkinci Kütlesel Debi (ṁ2)">
                                    <label for="mDotSecond">İkinci Kütlesel Debi (ṁ2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotIn" name="MDotIn" placeholder="Giriş Kütlesel Debi (ṁgiriş)">
                                    <label for="mDotIn">Giriş Kütlesel Debi (ṁgiriş)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotOut" name="MDotOut" placeholder="Çıkış Kütlesel Debi (ṁçıkış)">
                                    <label for="mDotOut">Çıkış Kütlesel Debi (ṁçıkış)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hIn" name="HIn" placeholder="Giriş Entalpisi (Hin)">
                                    <label for="hIn">Giriş Entalpisi (Hin)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="hOut" name="HOut" placeholder="Çıkış Entalpisi (Hout)">
                                    <label for="hOut">Çıkış Entalpisi (Hout)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="mixingChamberCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="mixingChamberCalculationResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            MDotFirst: parseFloat(document.getElementById("mDotFirst").value),
            MDotSecond: parseFloat(document.getElementById("mDotSecond").value),
            MDotIn: parseFloat(document.getElementById("mDotIn").value),
            MDotOut: parseFloat(document.getElementById("mDotOut").value),
            HIn: parseFloat(document.getElementById("hIn").value),
            HOut: parseFloat(document.getElementById("hOut").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/MixingChamber', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("mixingChamberCalculationResult").value = JSON.stringify(result.data, null, 2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
