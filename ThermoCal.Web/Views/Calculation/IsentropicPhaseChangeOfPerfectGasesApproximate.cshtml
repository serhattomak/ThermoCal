<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Mükemmel Gazların İzentropik Faz Değişimi Hesaplama - Yaklaşık</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mükemmel Gazların İzentropik Faz Değişimi Hesaplama - Yaklaşık</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="isentropicPhaseChangeApproximateForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tFirst" name="TFirst" placeholder="İlk Sıcaklık (T1)">
                                    <label for="tFirst">İlk Sıcaklık (T1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tSecond" name="TSecond" placeholder="İkinci Sıcaklık (T2)">
                                    <label for="tSecond">İkinci Sıcaklık (T2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="pFirst" name="PFirst" placeholder="İlk Basınç (P1)">
                                    <label for="pFirst">İlk Basınç (P1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="pSecond" name="PSecond" placeholder="İkinci Basınç (P2)">
                                    <label for="pSecond">İkinci Basınç (P2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificFirst" name="VSpecificFirst" placeholder="İlk Özgül Hacim (v1)">
                                    <label for="vSpecificFirst">İlk Özgül Hacim (v1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificSecond" name="VSpecificSecond" placeholder="İkinci Özgül Hacim (v2)">
                                    <label for="vSpecificSecond">İkinci Özgül Hacim (v2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="k" name="K" placeholder="İzotermal Sıkışabilirlik (k)">
                                    <label for="k">İzotermal Sıkışabilirlik (k)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="isentropicPhaseChangeApproximateResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="isentropicPhaseChangeApproximateResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            TFirst: parseFloat(document.getElementById("tFirst").value) || 0,
            TSecond: parseFloat(document.getElementById("tSecond").value) || 0,
            PFirst: parseFloat(document.getElementById("pFirst").value) || 0,
            PSecond: parseFloat(document.getElementById("pSecond").value) || 0,
            VSpecificFirst: parseFloat(document.getElementById("vSpecificFirst").value) || 0,
            VSpecificSecond: parseFloat(document.getElementById("vSpecificSecond").value) || 0,
            K: parseFloat(document.getElementById("k").value) || 0
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/IsentropicPhaseChangeOfPerfectGasesApproximate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                let resultText = `İlk Sıcaklık (T1): ${result.data.tFirst.toFixed(2)}\nİkinci Sıcaklık (T2): ${result.data.tSecond.toFixed(2)}\nİlk Basınç (P1): ${result.data.pFirst.toFixed(2)}\nİkinci Basınç (P2): ${result.data.pSecond.toFixed(2)}\nİlk Özgül Hacim (v1): ${result.data.vSpecificFirst.toFixed(2)}\nİkinci Özgül Hacim (v2): ${result.data.vSpecificSecond.toFixed(2)}`;
                document.getElementById("isentropicPhaseChangeApproximateResult").value = resultText;
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
            alert('An error occurred: ' + error.message);
        }
    });
</script>
