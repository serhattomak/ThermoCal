<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Yararlı İş Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yararlı İş Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="usefulWorkCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="w" name="W" placeholder="İş (W)">
                                    <label for="w">İş (W)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="wUseful" name="WUseful" placeholder="Yararlı İş (WUseful)">
                                    <label for="wUseful">Yararlı İş (WUseful)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="wSur" name="WSur" placeholder="Çevre İşi (WSur)">
                                    <label for="wSur">Çevre İşi (WSur)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="m" name="M" placeholder="Kütle (M)">
                                    <label for="m">Kütle (M)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="p0" name="P0" placeholder="Başlangıç Basıncı (P0)">
                                    <label for="p0">Başlangıç Basıncı (P0)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vFirst" name="VFirst" placeholder="İlk Hacim (VFirst)">
                                    <label for="vFirst">İlk Hacim (VFirst)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSecond" name="VSecond" placeholder="İkinci Hacim (VSecond)">
                                    <label for="vSecond">İkinci Hacim (VSecond)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificFirst" name="VSpecificFirst" placeholder="İlk Özgül Hacim (VSpecificFirst)">
                                    <label for="vSpecificFirst">İlk Özgül Hacim (VSpecificFirst)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="vSpecificSecond" name="VSpecificSecond" placeholder="İkinci Özgül Hacim (VSpecificSecond)">
                                    <label for="vSpecificSecond">İkinci Özgül Hacim (VSpecificSecond)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="usefulWorkCalculationResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="usefulWorkCalculationResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            W: parseFloat(document.getElementById("w").value),
            WUseful: parseFloat(document.getElementById("wUseful").value),
            WSur: parseFloat(document.getElementById("wSur").value),
            M: parseFloat(document.getElementById("m").value),
            P0: parseFloat(document.getElementById("p0").value),
            VFirst: parseFloat(document.getElementById("vFirst").value),
            VSecond: parseFloat(document.getElementById("vSecond").value),
            VSpecificFirst: parseFloat(document.getElementById("vSpecificFirst").value),
            VSpecificSecond: parseFloat(document.getElementById("vSpecificSecond").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/UsefulWork', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const result = await response.json();
            console.log("API Response:", result);

            if (result && result.data) {
                document.getElementById("usefulWorkCalculationResult").value = JSON.stringify(result.data, null, 2);
            } else {
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
