<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Isı ve Isı Transferi Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Isı ve Isı Transferi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="heatAndHeatTransferForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="qConductionDot" name="QConductionDot" placeholder="İletim Isısı Oranı (Q̇Conduction)">
                                    <label for="qConductionDot">İletim Isısı Oranı (Q̇Conduction)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="qConvectionDot" name="QConvectionDot" placeholder="Konveksiyon Isısı Oranı (Q̇Convection)">
                                    <label for="qConvectionDot">Konveksiyon Isısı Oranı (Q̇Convection)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="qRadiationDot" name="QRadiationDot" placeholder="Radyasyon Isısı Oranı (Q̇Radiation)">
                                    <label for="qRadiationDot">Radyasyon Isısı Oranı (Q̇Radiation)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tFirst" name="TFirst" placeholder="İlk Sıcaklık (T1)">
                                    <label for="tFirst">İlk Sıcaklık (T1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tSecond" name="TSecond" placeholder="İkinci Sıcaklık (T2)">
                                    <label for="tSecond">İkinci Sıcaklık (T2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="xFirst" name="XFirst" placeholder="İlk Mesafe (x1)">
                                    <label for="xFirst">İlk Mesafe (x1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="xSecond" name="XSecond" placeholder="İkinci Mesafe (x2)">
                                    <label for="xSecond">İkinci Mesafe (x2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="a" name="A" placeholder="Alan (A)">
                                    <label for="a">Alan (A)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="k" name="K" placeholder="Isıl İletkenlik (k)">
                                    <label for="k">Isıl İletkenlik (k)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="h" name="H" placeholder="Isıl Geçirgenlik Katsayısı (h)">
                                    <label for="h">Isıl Geçirgenlik Katsayısı (h)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sigma" name="Sigma" placeholder="Stefan-Boltzmann Sabiti (σ)">
                                    <label for="sigma">Stefan-Boltzmann Sabiti (σ)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="epsilon" name="Epsilon" placeholder="Emissivity (ε)">
                                    <label for="epsilon">Emissivity (ε)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tSurface" name="TSurface" placeholder="Yüzey Sıcaklığı (Tsurface)">
                                    <label for="tSurface">Yüzey Sıcaklığı (Tsurface)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tEnvironment" name="TEnvironment" placeholder="Çevre Sıcaklığı (Tenvironment)">
                                    <label for="tEnvironment">Çevre Sıcaklığı (Tenvironment)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tFluid" name="TFluid" placeholder="Akışkan Sıcaklığı (Tfluid)">
                                    <label for="tFluid">Akışkan Sıcaklığı (Tfluid)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="heatAndHeatTransferResult" class="form-label">Hesaplama Sonucu</label>
                            <textarea class="form-control" id="heatAndHeatTransferResult" rows="4" readonly></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            QConductionDot: parseFloat(document.getElementById("qConductionDot").value),
            QConvectionDot: parseFloat(document.getElementById("qConvectionDot").value),
            QRadiationDot: parseFloat(document.getElementById("qRadiationDot").value),
            TFirst: parseFloat(document.getElementById("tFirst").value),
            TSecond: parseFloat(document.getElementById("tSecond").value),
            XFirst: parseFloat(document.getElementById("xFirst").value),
            XSecond: parseFloat(document.getElementById("xSecond").value),
            A: parseFloat(document.getElementById("a").value),
            K: parseFloat(document.getElementById("k").value),
            H: parseFloat(document.getElementById("h").value),
            Sigma: parseFloat(document.getElementById("sigma").value),
            Epsilon: parseFloat(document.getElementById("epsilon").value),
            TSurface: parseFloat(document.getElementById("tSurface").value),
            TEnvironment: parseFloat(document.getElementById("tEnvironment").value),
            TFluid: parseFloat(document.getElementById("tFluid").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/HeatAndHeatTransfer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("heatAndHeatTransferResult").value = JSON.stringify(result.data, null, 2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
