<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Düzgün Akışlı Açık Sistemler için Entropi Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Düzgün Akışlı Açık Sistemler için Entropi Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="calculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotIn" name="MInDot" placeholder="Kütlesel Debi Giriş (ṁ,in)">
                                    <label for="mDotIn">Kütlesel Debi Giriş (ṁ,in)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="mDotOut" name="MOutDot" placeholder="Kütlesel Debi Çıkış (ṁ,out)">
                                    <label for="mDotOut">Kütlesel Debi Çıkış (ṁ,out)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="qrDot" name="QrDot" placeholder="Isı (Q̇r)">
                                    <label for="qrDot">Isı (Q̇r)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="tr" name="Tr" placeholder="Sıcaklık (Tr)">
                                    <label for="tr">Sıcaklık (Tr)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sIn" name="SIn" placeholder="Entropi (S,giren)">
                                    <label for="sIn">Entropi (S,giren)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sOut" name="SOut" placeholder="Entropi (S, çıkan)">
                                    <label for="sOut">Entropi (S, çıkan)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="entropyResult" class="form-label">Sonuç Entropi Jenerasyonu Oranı (ṠGen)</label>
                            <input type="text" class="form-control" id="entropyResult" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            MInDot: parseFloat(document.getElementById("mDotIn").value),
            MOutDot: parseFloat(document.getElementById("mDotOut").value),
            QrDot: parseFloat(document.getElementById("qrDot").value),
            Tr: parseFloat(document.getElementById("tr").value),
            SIn: parseFloat(document.getElementById("sIn").value),
            SOut: parseFloat(document.getElementById("sOut").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/EntropyCalculationForSteadyFlowOpenSystem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.sGenDot !== undefined) {
                document.getElementById("entropyResult").value = result.data.sGenDot;
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
