<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Basınç Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Basınç Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="pressureCalculationForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="p" name="P" placeholder="Basınç (P)">
                                    <label for="p">Basınç (P)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pAbsolute" name="PAbsolute" placeholder="Mutlak Basınç (PAbsolute)">
                                    <label for="pAbsolute">Mutlak Basınç (PAbsolute)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="density" name="Density" placeholder="Yoğunluk (ρ)">
                                    <label for="density">Yoğunluk (ρ)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="g" name="G" placeholder="Yerçekimi İvmesi (G)">
                                    <label for="g">Yerçekimi İvmesi (G)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="h" name="H" placeholder="Yükseklik (H)">
                                    <label for="h">Yükseklik (H)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="pAtm" class="form-label">Atmosfer Basıncı (PAtm)</label>
                            <input type="text" class="form-control" id="pAtm" readonly>

                            <label for="pVacuum" class="form-label mt-3">Vakum Basıncı (PVacuum)</label>
                            <input type="text" class="form-control" id="pVacuum" readonly>

                            <label for="pGauge" class="form-label mt-3">Gösterge Basıncı (PGauge)</label>
                            <input type="text" class="form-control" id="pGauge" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            P: parseFloat(document.getElementById("p").value),
            PAbsolute: parseFloat(document.getElementById("pAbsolute").value),
            Density: parseFloat(document.getElementById("density").value),
            G: parseFloat(document.getElementById("g").value),
            H: parseFloat(document.getElementById("h").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/Pressure', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("pAtm").value = result.data.pAtm.toFixed(2);
                document.getElementById("pVacuum").value = result.data.pVacuum.toFixed(2);
                document.getElementById("pGauge").value = result.data.pGauge.toFixed(2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
