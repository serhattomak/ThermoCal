<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Mükemmel Gazlar için Entropi Değişimi Hesaplama - Tam Çözüm</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mükemmel Gazlar için Entropi Değişimi Hesaplama - Tam Çözüm</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="entropyChangeGasesExactForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sZeroFirst" name="SZeroFirst" placeholder="İlk Entropi Sıfır (S01)">
                                    <label for="sZeroFirst">İlk Entropi Sıfır (S01)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sZeroSecond" name="SZeroSecond" placeholder="İkinci Entropi Sıfır (S02)">
                                    <label for="sZeroSecond">İkinci Entropi Sıfır (S02)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sZeroFirstOver" name="SZeroFirstOver" placeholder="S01/R">
                                    <label for="sZeroFirstOver">S01/R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="sZeroSecondOver" name="SZeroSecondOver" placeholder="S02/R">
                                    <label for="sZeroSecondOver">S02/R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="r" name="R" placeholder="R">
                                    <label for="r">R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="ruOver" name="RuOver" placeholder="Ru/R">
                                    <label for="ruOver">Ru/R</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="pFirst" name="PFirst" placeholder="İlk Basınç (P1)">
                                    <label for="pFirst">İlk Basınç (P1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="pSecond" name="PSecond" placeholder="İkinci Basınç (P2)">
                                    <label for="pSecond">İkinci Basınç (P2)</label>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="entropyResult" class="form-label">Entropi Değişimi (S)</label>
                            <input type="text" class="form-control" id="entropyResult" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            SZeroFirst: parseFloat(document.getElementById("sZeroFirst").value),
            SZeroSecond: parseFloat(document.getElementById("sZeroSecond").value),
            SZeroFirstOver: parseFloat(document.getElementById("sZeroFirstOver").value),
            SZeroSecondOver: parseFloat(document.getElementById("sZeroSecondOver").value),
            R: parseFloat(document.getElementById("r").value),
            RuOver: parseFloat(document.getElementById("ruOver").value),
            PFirst: parseFloat(document.getElementById("pFirst").value),
            PSecond: parseFloat(document.getElementById("pSecond").value)
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/EntropyChangeOfPerfectGasesExact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data && result.data.s !== undefined) {
                document.getElementById("entropyResult").value = result.data.s;
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>
