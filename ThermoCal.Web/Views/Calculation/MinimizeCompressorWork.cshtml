<main id="main" class="main">
    <div class="pagetitle">
        <h1>Hesaplama</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item">Hesaplama</li>
                <li class="breadcrumb-item active">Kompresör İşini Minimize Etme Hesaplama</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Kompresör İşini Minimize Etme Hesaplama</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="minimizeCompressorWorkForm">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pFirst" name="PFirst" placeholder="İlk Basınç (P1)">
                                    <label for="pFirst">İlk Basınç (P1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="pSecond" name="PSecond" placeholder="İkinci Basınç (P2)">
                                    <label for="pSecond">İkinci Basınç (P2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="tFirst" name="TFirst" placeholder="İlk Sıcaklık (T1)">
                                    <label for="tFirst">İlk Sıcaklık (T1)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="tSecond" name="TSecond" placeholder="İkinci Sıcaklık (T2)">
                                    <label for="tSecond">İkinci Sıcaklık (T2)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="k" name="K" placeholder="İzotermal Sıkışabilirlik (k)">
                                    <label for="k">İzotermal Sıkışabilirlik (k)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="n" name="N" placeholder="Mol Sayısı (n)">
                                    <label for="n">Mol Sayısı (n)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" step="any" class="form-control" id="r" name="R" placeholder="Gaz Sabiti (R)">
                                    <label for="r">Gaz Sabiti (R)</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="calculate">Hesapla</button>
                                <button type="reset" class="btn btn-secondary">Sıfırla</button>
                            </div>
                        </form><!-- End floating Labels Form -->

                        <div class="mt-3">
                            <label for="minimizeCompressorWorkResult" class="form-label">Hesaplama Sonucu</label>
                            <input type="text" class="form-control" id="minimizeCompressorWorkResult" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script type="module">
    document.getElementById("calculate").addEventListener("click", async function () {
        var formData = {
            PFirst: parseFloat(document.getElementById("pFirst").value) || 0,
            PSecond: parseFloat(document.getElementById("pSecond").value) || 0,
            TFirst: parseFloat(document.getElementById("tFirst").value) || 0,
            TSecond: parseFloat(document.getElementById("tSecond").value) || 0,
            K: parseFloat(document.getElementById("k").value) || 0,
            N: parseFloat(document.getElementById("n").value) || 0,
            R: parseFloat(document.getElementById("r").value) || 0
        };

        console.log("Form Data:", formData);

        try {
            const response = await fetch('/Calculation/MinimizeCompressorWork', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const responseText = await response.text();
            console.log("Raw API Response:", responseText);

            if (!response.ok) {
                console.error('API returned error:', responseText);
                throw new Error('API returned error: ' + responseText);
            }

            let result;
            try {
                result = JSON.parse(responseText);
            } catch (e) {
                console.error('Failed to parse JSON response:', responseText);
                throw new Error('Failed to parse JSON response: ' + responseText);
            }

            console.log("Parsed API Response:", result);

            if (result && result.data) {
                document.getElementById("minimizeCompressorWorkResult").value = result.data.w.toFixed(2);
            } else {
                console.error('API returned unexpected response:', result);
                alert('Error: API returned unexpected response');
            }
        } catch (error) {
            console.error('An error occurred:', error);
            alert('An error occurred: ' + error.message);
        }
    });
</script>
